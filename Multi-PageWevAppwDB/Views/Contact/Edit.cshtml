@model Contact
@{
    string title = ViewBag.Aciton + " Contact";
    ViewData["Title"] = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-lable">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-lable">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-lable">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Note" class="form-lable">Note</label>
        <input asp-for="Note" class="form-control" />
    </div>

    <input type="hidden" asp-for="ContactID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index" 
        class="btn btn-primary">Cancel</a>

</form>
